{
  "@timestamp": {
    "$resolver": "timestamp",
    "pattern": {
      "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
    }
  },
  "level": {
    "$resolver": "level",
    "field": "name"
  },
  "message": {
    "$resolver": "message",
    "stringified": true
  },
  "mdc": {
    "$resolver": "mdc",
    "flatten": true,
    "stringified": true
  },
  "thread": {
    "$resolver": "thread",
    "field": "name"
  },
  "correlationId": "${ctx:correlationId}",
  "dd": {
    "trace_id": "${ctx:dd.trace_id}",
    "span_id": "${ctx:dd.span_id}"
  },
  "tags": {
    "$resolver": "ndc"
  },
  "logger": {
    "$resolver": "logger",
    "field": "name"
  },
  "error.type": {
    "$resolver": "exception",
    "field": "className"
  },
  "error.message": {
    "$resolver": "exception",
    "field": "message"
  },
  "error.stack_trace": {
    "$resolver": "exception",
    "field": "stackTrace",
    "stackTrace": {
      "stringified": true
    }
  }
}